// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["book_id","chapter_id"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"chapter_id": {
			"bsonType": "string"
		},
		"title": {
			"bsonType": "string"
		},
		"order": {
			"bsonType": "int"
		},
		"level": {
			"bsonType": "int"
		},
		"text":{
			"bsonType": "string"
		},
		"book_id":{
			"bsonType": "string",
			"foreignKey": "book_library.book_id"
		}
	}
}