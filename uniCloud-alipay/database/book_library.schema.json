// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["book_id","title","creator"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title": {"bsonType":"string"},
		"language": {"bsonType": "string"},
		"creator": {"bsonType": "string"},
		"description": {"bsonType": "string"},
		"create_time":{
			"bsonType": "date"
		},
		"cover":{
			"bsonType": "string"
		},
		"book_id":{
			"bsonType": "string"
		}
	}
}